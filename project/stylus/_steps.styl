.steps
  display flex
  justify-content space-between
  padding 83px 0 91px
  &__item
    display flex
    justify-content flex-start
    width 100%
    p
      opacity 0.5
      color $black-2
      font-size 15px
      font-weight 400
  &__image
    max-width 50px
    width 100%
    height 50px
    border-radius 50%
    display flex
    align-items center
    justify-content center
    border 1px solid rgba(39, 40, 48, .08)
    position relative
    margin-top -10px
  &__number
    position absolute
    left -11px
    top -11px
    width 27px
    height 27px
    box-shadow -65px 41px 65px rgba(39, 40, 48, 0.08)
    background-color $white
    display flex
    justify-content center
    align-items center
    color $black-2
    font-size 10px
    font-weight 700
    border-radius 50%
  &__title
    color $black-2
    font-size 20px
    font-weight 400
    line-height 30px
    padding-bottom 6px
  &__text
    margin-left 15px