.footer
  background-color $black-2
  padding 80px 0 76px
  p
    color $gray-3
    font-size 15px
    font-weight 400
    line-height 25px
  &__social
    max-width 530px
    width 100%
    a
      color $white
    &--line 
      margin-bottom 20px
      a 
        display flex
        align-items center
        &:hover
          color $gray-2
      img
        margin-top 4px
        margin-right 20px
  &__top
    display flex
    justify-content center
  .logotype 
    position absolute
    left 15px
    top 15px
    &__text
      color $white
  &__image
    position absolute
    right -55px
    top -172px
  &__calls
    display flex
    justify-content space-between
    margin-top 52px
    position relative
    z-index 1
  &__bottom
    display flex
    margin-top 80px
    &--text
      width 50%
      &:first-child
        margin-right 35px
      &:last-child
        margin-left 35px
    p
      margin-bottom 25px
      opacity .5