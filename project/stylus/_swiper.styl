.swiper
  padding 142px 0 82px
  &-container 
    width 410px
    padding-top 45px
  &__wrap 
    margin-right 58px
  &-button
    &-prev 
      top auto
      bottom 36px
      bottom 0
      left 69.2%
      &:after
        position absolute
        content ''
        background-image url(../img/arrowl.svg)
        height 14px
        width 14px
    &-next 
      top auto
      bottom 36px
      bottom 0
      left 85.4%
      &:after
        position absolute
        content ''
        background-image url(../img/arrowr.svg)
        height 14px
        width 14px
    &-next,
    &-prev
      width 50px
      height 50px
      border-radius 35px
      transition all .3s ease
      background #f24949
      outline none
      &:hover
        background rgb(199, 60, 60)
  &-sides
    display flex
    justify-content space-between
  &-image
    margin-left -5px
  &-text 
    color $black-3
    font-size 25px
    font-weight 400
    line-height 40px
    min-height 358px
    padding-bottom 20px
  &-slide 
    padding-top 20px
  &-author
    line-height 24px
    &--text
      font-size 15px