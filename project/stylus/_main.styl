.wrapper
  max-width 1060px
  padding 0 15px
  width 100%
  margin 0 auto
  position relative
  &--lg
    max-width 1200px
    width 100%
    padding 0 15px
    margin 0 auto

.text
  &--lg
    color $black-2
    font-size 50px
    font-weight 400
    letter-spacing 1.67px
    line-height 80px
  &--md
    color $black-2
    font-size 40px
    font-weight 400
    letter-spacing 1.33px
    line-height 55px
  &--sm
    color $black-3
    font-size 20px
    font-weight 400
    line-height 30px
  &--lt
    color $gray-2
    font-size 20px
    font-weight 400
    line-height 30px

.btn
  max-width 255px
  display flex
  align-items center
  justify-content center
  width 100%
  height 71px
  color $white
  font-size 13px
  font-weight 500
  letter-spacing 3px
  line-height 20px
  text-transform uppercase
  appearance none
  transition .3s ease all
  &__call
    background #475eee
    &:hover
      background #2f3fa3
  &__letter
    background #f24949
    &:hover
      background #c73c3c

.hr
  height 1px
  background-color $gray-3
  opacity .1
  margin-top 100px

.cur
  font-family Asap
  font-weight 400