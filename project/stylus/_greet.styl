.greet
  &__wrapper
    display flex
    justify-content space-between
    padding-top 51px
  .title
    text-align center
    position relative
    z-index 1
    &:after
      position absolute
      content ''
      top 68px
      // left 2px
      left 15px
      height 117px
      width 294px
      background-image url(../img/block1.svg)
      z-index -1
  &__text
    position relative
    padding-top 51px
    padding-left 10px
    &:after 
      position absolute
      content ''
      top 45px
      left -3px
      background-image url(../img/block2.svg)
      width 55px
      height 119px
    p
      color $black-2
      font-size 20px
      font-weight 400
      line-height 35px
    span
      color #ffffff
      z-index 1
      position relative
      display inline-block
      margin-right 8px
