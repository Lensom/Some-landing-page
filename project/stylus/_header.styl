.header
  background-image url(../img/background-1.jpg)
  background-position center center
  background-size cover
  &__wrapper
    display flex
    justify-content space-between
    padding 48px 0

.logotype
  z-index 3
  &__text
    color $black-2
    font-size 20px
    font-weight 400
    line-height 20px
    padding-left 14px
  a
    display flex
    align-items center

.menu
  &__wrapper 
    margin-left 32px
  &__item
    display inline-block
    margin 4px 26px 0 0
    a
      color $black-2
      font-size 13px
      font-weight 500
      letter-spacing 3px
      line-height 20px
      text-transform uppercase
      &:hover
        color rgba(0, 0, 0, .5)
  &__icon
    width 30px
    height 30px
    position absolute
    top -40px
    right 15px
    display none
    z-index 2

.openMobileMenu
  position fixed
  .menu
    transform translateX(0)
    z-index 2
  .line
    &--1 
      transform rotate(45deg)
      top 10px
    &--2 
      display none
    &--3 
      transform rotate(-45deg)
      top 10px

.line
  position absolute
  width 100%
  height 2px
  left 0
  background $black-2
  transition all .3s ease
  &--1
    top 0
  &--2
    top 10px
  &--3
    top 20px

.social
  display flex
  justify-content space-between
  margin-top 2px
  a
    display flex
    align-items center
    color $black-2
    font-size 13px
    font-weight 500
    letter-spacing 3px
    line-height 20px
    text-transform uppercase
    &:hover
      color $black
  span 
    position relative
    width 30px
    height 30px
    border-radius 50%
    display flex
    align-items center
    justify-content center
    margin-left 10px

.phone
  &__wrapper
    margin-right 57px
    img 
      transform rotate(140deg)
      position absolute
      top 10px
      left 6px
    span
      background-color #f24949
      transition all .3s ease
    a
      &:hover
        color rgba(0, 0, 0, .5)
        span
          background-color #c73c3c

.login
  &__wrapper
    span
      transition all .3s ease
      background-color #475eee
    a
      &:hover
        color rgba(0, 0, 0, .5)
        span
          background-color #2f3fa3
  