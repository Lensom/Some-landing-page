.questions
  padding 40px 0 25px

.accordion
  display flex
  justify-content space-between
  flex-wrap wrap
  padding 58px 0
  &__item
    width 50%
    margin-bottom 40px
    padding-right 20px
  &__title
    display flex
    align-items flex-start
    cursor pointer
    span
      width 100%
      max-width 50px
      height 50px
      position relative
      background-color #475eee
      display inline-block
      border-radius 50%
      margin-top 2px
      margin-right 25px
      &:before
        content ''
        width 2px
        height 20px
        background $white
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
      &:after
        content ''
        width 20px
        height 2px
        background $white
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
    .opened
      background-color #f24949
      &:before 
        display none
  &__text
    padding 0 75px
    margin-top 20px
    background-color $white
    max-height 0
    overflow hidden
    transition max-height 0.2s ease-out