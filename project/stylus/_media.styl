@import "_vars.styl"

@media (max-width : 1380px)
	.slider:after
		left 93.6%
		transform scale(.7)

/* Large Devices, Wide Screens */
@media (max-width : 1200px)
	.slider
		margin -37px 120px 0 0
		max-width 492px
	.phone
		&__wrapper
			margin-right 28px
	.menu
		&__item
			margin 4px 20px 0 0
	.ways
		padding-top 50px
		&__wrapper
			padding 40px 0
	.us
		&__wrapper
			padding 50px 0
	.about
		padding 50px 0
		&__table
			padding 50px 132px 50px 65px
			&--image
				top -70px
				left 17.4%
				transform scale(.6)
	.swiper
		padding 50px 0
		&-container
			margin-left 50px
	.accordion
		.text--md
			font-size 22px
			line-height 34px
		&__title
			span
				max-width 44px
				height 44px
				margin-right 15px
		&__text
			padding 0 62px
	.btn
		height 60px

	.text
		&--md
			font-size 30px
			line-height 44px
		&--lt
			font-size 16px
			line-height 24px
		&--lg 
			font-size 42px
			line-height 60px
	.footer
		padding 50px 0
		&__image
			right 0
			transform scale(.8)
		p
			font-size 14px
		.logotype
			top 7px
	.greet
		.title
			&:after
				transform scale(.8)
				top 39px
		

/* Medium Devices, Desktops */
@media (max-width : 998px)
	.greet
		&__wrapper
			justify-content center 
		&__content
			margin-right 30px
	.slider
		margin 0
		padding 30px
		max-width 400px
		&__text 
			font-size 18px
			line-height 24px
		&__result
			&--value
				font-size 30px
		&__range 
			padding-top 25px
		&:after
			display none
	.header
		&__wrapper
			padding 15px 0
			flex-direction column
	.menu
		&__wrapper
			position absolute
			width 100%
			top 60px
			text-align center
			margin 0
			left 0
		&__item
			margin 4px 10px 0 10px
	.social
		margin 2px 0 15px
		justify-content flex-end 
	.logotype
		position absolute
	.steps
		&__title
			font-size 18px
	.us
		&__side
			margin-right 0
	.about
		&__text
			padding-right 20px
			.text
				&--md
					font-size 22px
					line-height 34px
				&--lt
					font-size 14px
					line-height 24px
		&__table
			padding 30px 50px 0px 49px
			min-width 392px
	.swiper
		&-text 
			font-size 20px
			line-height 28px
			min-height 256px
			height 100%
		&-author 
			margin 0
			padding-bottom 25px
		&-button
			&-prev,
			&-next 
				bottom 0
				position absolute
				top calc(100% - 50px)
		&__wrap
			margin-right 0
	.accordion
		flex-direction column 
		&__item
			width 100%
			padding-right 0
		&__text
			margin-top 10px
		&__title
			span
				margin-top -3px
	.btn
		max-width 210px

	.text
		&--md
			font-size 26px

	.footer
		&__social
			max-width 454px
		&__social
			&--line
				img
					margin-right 12px
		&__image
			top -195px
			transform scale(0.6)
		&__bottom
			margin-top 40px
	


/* Small Devices, Tablets */
@media (max-width : 768px)
	.steps
		flex-direction column
		padding 70px 0 50px
		&__item
			flex-direction column
			align-items center
			margin-bottom 45px
		&__title
			br
				display none
		&__text
			margin-left 0
			text-align center
		&__image
			margin-top 0
	.slider
		margin 30px auto 0
	.greet
		&__wrapper
			flex-direction column
		.title
			font-size 32px
			&:after
				top -26px
				transform scale(.5)
				left 50%
			br 
				display none
		&__content
			margin-right 0
		&__text
			display flex
			justify-content space-between
			padding 20px 0
			&:after
				display none
			p
				position relative
				font-size 18px
				&:after
					position absolute
					content ''
					top 0
					left -6px
					background-image url(../img/block2.svg)
					width 43px
					height 33px
				&:second-child
					margin 0 10px
	.phone
		&__wrapper
			margin-right 15px
	.social
		a
			letter-spacing 1px
	.ways
		&__wrapper
			padding 40px 0
			flex-wrap wrap
		&__item
			width 33.3%
			margin-bottom 30px
	.us
		&__sides
			flex-direction column
		&__subtitle
			padding-right 0
			max-width none
		&__side
			margin-top 20px
		&__item
			flex-direction column
			align-items center
		&__logotype
			margin 0
		&__text
			text-align center
			margin-top 20px
	.about
		&__wrapper
			flex-direction column 
		&__text
			max-width none
			p 
				padding-bottom 15px
		&__table
			max-width 400px
			width 100%
			min-width auto
			margin 20px auto 0
		
	.accordion
		.text--md
			font-size 18px
			line-height 28px
		&__title
			span
				margin-top -6px
	.footer
		.logotype
			margin-bottom 20px
		&__bottom
			flex-direction column
			&--text
				width 100%
				&:first-child,
				&:last-child
					margin 0
			p
				margin-bottom 15px
		p
			font-size 12px
		.hr
			margin-top 50px
		&__top
			flex-direction column
		.logotype
			position relative
			top 0
			left 0
		&__image
			right -80px
	.swiper
		&-sides
			flex-direction column
		&-image
			margin 0
			img
				margin 0 auto
		&-container
			margin 0
			width 100%
		&-text 
			min-height 170px
		&-button
			&-prev,
			&-next
				bottom 0
				left auto
			&-next 
				right 0
			&-prev
				right 65px
		&-author 
			margin-top 0

/* Extra Small Devices, Phones */
@media (max-width : 480px)
	.social
		span
			margin 0
	.greet
		&__wrapper
			padding-top 10px
		.title
			line-height 50px
			font-size 36px
			&:after
				left 50%
				transform translateX(-50%) scale(.5)
				top 20px
		&__text
			flex-direction column
			align-items center

	.slider
		margin 10px auto 0
		padding 15px
		&__range 
			padding-top 10px
			&--current,
			&--return
				font-size 14px
		&__btn
			height 40px
			&--wrapper
				padding-top 15px
		&__result
			&--value
				font-size 22px
				line-height 46px
		&__text
			font-size 14px
			line-height 20px
			br
				display none

	.menu
		transform translateX(-100%)
		transition all .3s ease
		position fixed
		top 0
		left 0
		right 0
		bottom 0
		background $gray-2
		z-index 1 
		display flex
		align-items center
		justify-content center
		flex-direction column
		&__item
			margin 20px 0
		&__icon
			display block
	.login__wrapper
		margin 0 50px 0 0
		a
			font-size 0
			line-height 0
	.phone__wrapper
		a
			font-size 0
			line-height 0
	.ways
		&__item
			width 50%
	.about
		&__table
			padding 30px 34px 0px 34px
		&__item
			&--title
				margin-bottom 6px
	.swiper
		&-text 
			font-size 18px
			line-height 24px
	.accordion
		padding 40px 0 20px
		.text--md
			font-size 16px
			line-height 22px
		&__title
			span
				margin-top -4px
				max-width 30px
				height 30px
				&:after
					width 15px
				&:before
					height 15px
		&__text
			padding 0 0px 0 46px
		&__item
			margin-bottom 20px
	.text
		&--md
			font-size 18px
			line-height 24px
	.footer
		&__social
			&--line
				margin-bottom 10px
		&__calls
			flex-direction column
			margin-top 40px
		&__bottom 
			p 
				margin-bottom 10px
		.hr
			margin-top 30px
		&__image
			right -100px
			top -240px
			transform scale(.4)
		
	.btn
		max-width none
		margin-bottom 20px
	

