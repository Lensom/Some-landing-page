@import "_vars.styl"

/* Large Devices, Wide Screens */
@media (max-width : 1200px)
	.phone
		&__wrapper
			margin-right 28px
	.menu
		&__item
			margin 4px 20px 0 0
	.ways
		padding-top 50px
		&__wrapper
			padding 40px 0
	.us
		&__wrapper
			padding 50px 0
	.about
		padding 50px 0
		&__table
			padding 50px 132px 50px 65px
			&--image
				top -70px
				left 17.4%
				transform scale(.6)
	.swiper
		padding 50px 0
		&-container
			margin-left 50px
	.accordion
		.text--md
			font-size 22px
			line-height 34px
		&__title
			span
				max-width 44px
				height 44px
				margin-right 15px
		&__text
			padding 0 62px
	.btn
		height 60px

	.text
		&--md
			font-size 30px
			line-height 44px
		&--lt
			font-size 16px
			line-height 24px
	.footer
		padding 50px 0
		&__image
			right 0
			transform scale(.8)
		p
			font-size 14px
		.logotype
			top 7px

/* Medium Devices, Desktops */
@media (max-width : 998px)
	.header
		&__wrapper
			padding 15px 0
			flex-direction column
	.menu
		&__wrapper
			position absolute
			width 100%
			top 60px
			text-align center
			margin 0
			left 0
		&__item
			margin 4px 10px 0 10px
	.social
		margin 2px 0 15px
		justify-content flex-end 
	.logotype
		position absolute
	
	.us
		&__side
			margin-right 0
	.about
		&__text
			padding-right 20px
			.text
				&--md
					font-size 22px
					line-height 34px
				&--lt
					font-size 14px
					line-height 24px
		&__table
			padding 30px 50px 0px 49px
			min-width 392px
	.swiper
		&-text 
			font-size 20px
			line-height 28px
			min-height 256px
			height 100%
		&-author 
			margin-top -120px
	.accordion
		flex-direction column 
		&__item
			width 100%
			padding-right 0
		&__text
			margin-top 10px
		&__title
			span
				margin-top -3px
	.btn
		max-width 210px

	.text
		&--md
			font-size 26px

	.footer
		&__social
			max-width 454px
		&__social
			&--line
				img
					margin-right 12px
		&__image
			top -195px
			transform scale(0.6)
		&__bottom
			margin-top 40px
	


/* Small Devices, Tablets */
@media (max-width : 768px)
	.phone
		&__wrapper
			margin-right 15px
	.social
		a
			letter-spacing 1px
	.ways
		&__wrapper
			padding 40px 0
			flex-wrap wrap
		&__item
			width 33.3%
			margin-bottom 30px
	.us
		&__sides
			flex-direction column
		&__subtitle
			padding-right 0
			max-width none
		&__side
			margin-top 20px
		&__item
			flex-direction column
			align-items center
		&__logotype
			margin 0
		&__text
			text-align center
			margin-top 20px
	.about
		&__wrapper
			flex-direction column 
		&__text
			max-width none
			p 
				padding-bottom 15px
		&__table
			max-width 400px
			width 100%
			min-width auto
			margin 20px auto 0
		
	.accordion
		.text--md
			font-size 18px
			line-height 28px
		&__title
			span
				margin-top -6px
	.footer
		.logotype
			margin-bottom 20px
		&__bottom
			flex-direction column
			&--text
				width 100%
				&:first-child,
				&:last-child
					margin 0
			p
				margin-bottom 15px
		p
			font-size 12px
		.hr
			margin-top 50px
		&__top
			flex-direction column
		.logotype
			position relative
			top 0
			left 0
		&__image
			right -80px
	.swiper
		&-sides
			flex-direction column
		&-image
			margin 0
			img
				margin 0 auto
		&-container
			margin 0
			width 100%
		&-text 
			min-height 170px
		&-button
			&-prev,
			&-next
				bottom 0
		&-author 
			margin-top 0

/* Extra Small Devices, Phones */
@media (max-width : 480px)
	.ways
		&__item
			width 50%
	.about
		&__table
			padding 30px 34px 0px 34px
		&__item
			&--title
				margin-bottom 6px
	.swiper
		&-text 
			font-size 18px
			line-height 24px
		&-button
			&-prev
				left 63%
			&-next
				right 0
				left auto
	.accordion
		padding 40px 0 20px
		.text--md
			font-size 16px
			line-height 22px
		&__title
			span
				margin-top -4px
				max-width 30px
				height 30px
				&:after
					width 15px
				&:before
					height 15px
		&__text
			padding 0 0px 0 46px
		&__item
			margin-bottom 20px
	.text
		&--md
			font-size 18px
			line-height 24px
	.footer
		&__social
			&--line
				margin-bottom 10px
		&__calls
			flex-direction column
			margin-top 40px
		&__bottom 
			p 
				margin-bottom 10px
		.hr
			margin-top 30px
		&__image
			right -100px
			top -240px
			transform scale(.4)
		
	.btn
		max-width none
		margin-bottom 20px
	

